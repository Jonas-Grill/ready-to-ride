<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.horsedetail.HorseDetail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/horsename_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:textAppearance="?attr/textAppearanceHeadline5"
                    tools:text="Pferdename" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingEnd="8dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="1dp">

                            <ImageView
                                android:id="@+id/imageView4"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_weight="1"
                                android:src="@drawable/ic_baseline_height_24" />

                            <TextView
                                android:id="@+id/height_detail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingStart="8dp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                                tools:text="167 cm" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="1dp">

                            <ImageView
                                android:id="@+id/imageView9"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_weight="1"
                                android:src="@drawable/ic_baseline_category_24" />

                            <TextView
                                android:id="@+id/race_detail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="8dp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                                tools:text="Quaterhorse" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="1dp">

                            <ImageView
                                android:id="@+id/imageView10"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_weight="1"
                                android:src="@drawable/ic_baseline_cake_24" />

                            <TextView
                                android:id="@+id/age_detail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="8dp"
                                android:text="TextView"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                                tools:text="17 Jahre" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="1dp">

                            <ImageView
                                android:id="@+id/imageView11"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_weight="1"
                                android:src="@drawable/ic_baseline_color_lens_24" />

                            <TextView
                                android:id="@+id/colour_detail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="8dp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                                tools:text="Braun" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="1dp">

                            <ImageView
                                android:id="@+id/imageView12"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_weight="1"
                                android:src="@drawable/ic_baseline_speed_24" />

                            <TextView
                                android:id="@+id/difficulty_detail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="8dp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                                tools:text="Anfänger" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center|top"
                            android:orientation="horizontal"
                            android:padding="1dp">

                            <ImageView
                                android:id="@+id/imageView13"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_weight="1"
                                android:foregroundGravity="top"
                                android:src="@drawable/ic_baseline_description_24" />

                            <TextView
                                android:id="@+id/horsedescription_detail"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:paddingStart="8dp"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                                tools:text="Das ist ein tolles Pferd. Man kann es sehr gut reiten. Es mag am liebsten Möhren und Pommes." />
                        </LinearLayout>
                    </LinearLayout>

                    <com.denzcoskun.imageslider.ImageSlider
                        android:id="@+id/imageSliderTrainer"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        app:iss_auto_cycle="true"
                        app:iss_period="5000"
                        app:iss_delay="0"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/book_lesson" />

    </LinearLayout>
</FrameLayout>