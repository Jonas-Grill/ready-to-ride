<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/backgr"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="vertical"
    tools:context=".ui.booking.BookingFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/orange_500"
                android:elevation="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button7"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/orange_200"
                    android:enabled="false" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/orange_500"
                    android:gravity="center"
                    android:paddingVertical="12dp"
                    android:text="Suchkriterien"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/button6"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_baseline_keyboard_arrow_down_24"
                    app:iconGravity="end"
                    app:iconPadding="0dp"
                    app:iconSize="25dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/expanded_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/orange_200"
                    android:elevation="5dp"
                    android:paddingVertical="4dp"
                    android:paddingStart="4dp"
                    android:text="Trainer auswählen"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="@color/black" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_selection_trainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#4AE8E8E8"
                    android:paddingStart="4dp"
                    app:layoutManager="StaggeredGridLayoutManager" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/orange_200"
                    android:elevation="5dp"
                    android:paddingVertical="4dp"
                    android:paddingStart="4dp"
                    android:text="Pferd auswählen"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="@color/black" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_selection_horse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#4AE8E8E8"
                    android:paddingStart="4dp"
                    app:layoutManager="StaggeredGridLayoutManager">

                </androidx.recyclerview.widget.RecyclerView>

                <Button
                    android:id="@+id/button4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="4dp"
                    android:text="Auswahl bestätigen" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/orange_500"
                android:elevation="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button2"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="16dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/orange_200"
                    app:icon="@drawable/ic_baseline_arrow_back_ios_new_24"
                    app:iconGravity="end"
                    app:iconPadding="0dp"
                    app:iconSize="16dp"
                    app:iconTint="@color/white" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="13.06.2022 - 19.06.2022 "
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/button3"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="16dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/orange_200"
                    app:icon="@drawable/ic_baseline_arrow_forward_ios_24"
                    app:iconSize="16dp"
                    app:iconTint="@color/white" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/orange_200"
                android:elevation="5dp"
                android:paddingVertical="3dp"
                android:paddingStart="4dp"
                android:text="@string/day1"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_bookings_monday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#4AE8E8E8"
                android:scrollbars="none"
                app:layoutManager="StaggeredGridLayoutManager" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/orange_200"
                android:elevation="5dp"
                android:paddingVertical="3dp"
                android:paddingStart="4dp"
                android:text="@string/day2"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_bookings_tuesday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#4AE8E8E8"
                app:layoutManager="StaggeredGridLayoutManager" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/orange_200"
                android:elevation="5dp"
                android:paddingVertical="3dp"
                android:paddingStart="4dp"
                android:text="@string/day3"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_bookings_wednesday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#4AE8E8E8"
                app:layoutManager="StaggeredGridLayoutManager" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/orange_200"
                android:elevation="5dp"
                android:paddingVertical="3dp"
                android:paddingStart="4dp"
                android:text="@string/day4"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_bookings_thursday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#4AE8E8E8"
                app:layoutManager="StaggeredGridLayoutManager" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/orange_200"
                android:elevation="5dp"
                android:paddingVertical="3dp"
                android:paddingStart="4dp"
                android:text="@string/day5"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_bookings_friday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#4AE8E8E8"
                app:layoutManager="StaggeredGridLayoutManager" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/orange_200"
                android:elevation="5dp"
                android:paddingVertical="3dp"
                android:paddingStart="4dp"
                android:text="@string/day6"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_bookings_saturday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#4AE8E8E8"
                app:layoutManager="StaggeredGridLayoutManager" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/orange_200"
                android:elevation="5dp"
                android:paddingVertical="3dp"
                android:paddingStart="4dp"
                android:text="@string/day7"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_bookings_sunday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#4AE8E8E8"
                app:layoutManager="StaggeredGridLayoutManager" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>